		"dev": "concurrently \"npm run start:watch\" \"npm run client\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alekseyka221/team-one.git"
	},
	"author": "SKHSH",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alekseyka221/team-one/issues"
	},
	"homepage": "https://github.com/alekseyka221/team-one#readme",
	"dependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/config": "^0.0.38",
		"@types/express": "^4.17.11",
		"@types/jsonwebtoken": "8.5.1",
		"@types/mongoose": "^5.10.4",
		"bcryptjs": "^2.4.3",
		"config": "^3.3.6",
		"express": "^4.17.1",
		"express-validator": "^6.10.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/node": "^15.0.2",
		"concurrently": "^6.0.1",
		"nodemon": "^2.0.7"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
